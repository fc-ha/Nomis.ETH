@using Numus.Web.Helpers

@model Numus.Web.Models.WalletStats
@{
    var score = Model.GetScore();
    var color = "#8f8f8f";
    if (score > 0.25)
    {
        color = "#cf2b2b";
    }
    if (score > 0.50)
    {
        color = "#cfc62b";
    }
    if (score > 0.75)
    {
        color = "#57cf2b";
    }
}
<script src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
<h3 class="animate__animated animate__zoomIn m-3">@Consts.Brand Score: <span style="color: @color">@score.ToString("P")
    <a href="https://twitter.com/share?ref_src=twsrc%5Etfw"
       class="twitter-share-button"
       data-size="large"
       data-text="Hey! See My Numus Score: @score.ToString("P")"
       data-show-count="false">Share in Twitter</a>
    </span></h3>
<p>
    <a class="button button-shadow button-primary" type="button" data-bs-toggle="collapse" data-bs-target="#detailTable" aria-expanded="false" aria-controls="detailTable">Show details</a>
</p>
<table class="table table-striped table-hover collapse" id="detailTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Param</th>
            <th scope="col">Value</th>
            <th scope="col">Unit</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>WalletAge</td>
            <td>@Model.WalletAge</td>
            <td>months</td>
        </tr>
        <tr>
            <th scope="row">2</th>
            <td>Balance</td>
            <td>@Model.Balance</td>
            <td>ETH</td>
        </tr>
        <tr>
            <th scope="row">3</th>
            <td>AverageTransactionTime</td>
            <td>@Model.AverageTransactionTime</td>
            <td>hours</td>
        </tr>
        <tr>
            <th scope="row">4</th>
            <td>MaxTransactionTime</td>
            <td>@Model.MaxTransactionTime</td>
            <td>hours</td>
        </tr>
        <tr>
            <th scope="row">5</th>
            <td>MinTransactionTime</td>
            <td>@Model.MinTransactionTime</td>
            <td>hours</td>
        </tr>
        <tr>
            <th scope="row">6</th>
            <td>TotalTransactions</td>
            <td>@Model.TotalTransactions</td>
            <td>number</td>
        </tr>
        <tr>
            <th scope="row">7</th>
            <td>WalletTurnover</td>
            <td>@Model.WalletTurnover</td>
            <td>ETH</td>
        </tr>
        <tr>
            <th scope="row">8</th>
            <td>NftHolding</td>
            <td>@Model.NftHolding</td>
            <td>number</td>
        </tr>
        <tr>
            <th scope="row">9</th>
            <td>TimeFromLastTransaction</td>
            <td>@Model.TimeFromLastTransaction</td>
            <td>months</td>
        </tr>
        <tr>
            <th scope="row">10</th>
            <td>NftTrading</td>
            <td>@Model.NftTrading</td>
            <td>ETH</td>
        </tr>
        <tr>
            <th scope="row">11</th>
            <td>NftWorth</td>
            <td>@Model.NftWorth</td>
            <td>ETH</td>
        </tr>

        <tr>
            <th scope="row">12</th>
            <td>TransactionsPerMonth</td>
            <td>@Model.TransactionsPerMonth</td>
            <td>ETH</td>
        </tr>
        <tr>
            <th scope="row">13</th>
            <td>LastMonthTransactions</td>
            <td>@Model.LastMonthTransactions</td>
            <td>ETH</td>
        </tr>
        <tr>
            <th scope="row">14</th>
            <td>DeployedContracts</td>
            <td>@Model.DeployedContracts</td>
            <td>ETH</td>
        </tr>
        <tr>
            <th scope="row">15</th>
            <td>TokensHolding</td>
            <td>@Model.TokensHolding</td>
            <td>ETH</td>
        </tr>
    </tbody>
</table>