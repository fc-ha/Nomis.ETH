@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<h1 class="hero-title h2-mobile mt-0 is-revealing">Get @Consts.Brand Score</h1>
<form class="row" method="post">
        <div class="hero-form  field-grouped is-revealing">
            <div class=" input-group "  style="width: 70em">
                <span class="input-group-text" id="basic-addon1">Wallet Address:</span>
                <input asp-for="WalletAddress" type="text" class="form-control" placeholder="Enter Etherium Address like 0x...">
            </div>
            <div class="control">
                <button type="submit" class="button button-primary button-block button-shadow ms-1">Get Score</button>
            </div>
        </div>
        @if (Model.WalletStats != null)
        {
            if (Model.WalletStats.NoData)
            {
                <div class="alert alert-warning" role="alert">
                    No Enough Data Yet!
                </div>
            }
            else
            {
                <partial name="_WalletStatsPartial" model="Model.WalletStats" />
            }
        }
    </form>

